@model List<CMCS.Mvc.Models.Claim>
<div class="d-flex align-items-center justify-content-between mb-3">
    <h3>Claim Status (Lecturer)</h3>
    <form method="get" class="d-flex" role="search">
        <input name="q" class="form-control me-2" placeholder="Search month, status, lecturer..." value="@ViewBag.Query" />
        <button class="btn btn-outline-primary">Search</button>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
    <tr>
        <th>Claim #</th>
        <th>Lecturer</th>
        <th>Month</th>
        <th>Hours</th>
        <th>Rate (R)</th>
        <th>Amount (R)</th>
        <th>Status</th>
        <th>Submitted</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.ClaimId</td>
            <td>@c.LecturerName</td>
            <td>@c.Month</td>
            <td>@c.HoursWorked</td>
            <td>@c.HourlyRate</td>
            <td>@c.TotalAmount</td>
            <td>@c.Status</td>
            <td>@c.SubmissionDate.ToString("yyyy-MM-dd")</td>
        </tr>
    }
    </tbody>
</table>
