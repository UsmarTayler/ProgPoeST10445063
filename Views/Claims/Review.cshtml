@model List<CMCS.Mvc.Models.Claim>
<h3>Admin Review (Coordinator/Manager)</h3>
<div class="alert alert-info">
    UI-only simulation. Approve/Reject buttons show a static message and do not change data.
</div>
<div class="mb-2">
    <button class="btn btn-success" onclick="alert('Approved all (simulation only).');">Approve All Pending</button>
    <button class="btn btn-danger ms-2" onclick="alert('Rejected all (simulation only).');">Reject All Pending</button>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
    <tr>
        <th>Claim #</th>
        <th>Lecturer</th>
        <th>Month</th>
        <th>Amount (R)</th>
        <th>Docs</th>
        <th>Status</th>
        <th>Submitted</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.ClaimId</td>
            <td>@c.LecturerName</td>
            <td>@c.Month</td>
            <td>@c.TotalAmount</td>
            <td>@c.Documents.Count</td>
            <td>@c.Status</td>
            <td>@c.SubmissionDate.ToString("yyyy-MM-dd")</td>
        </tr>
    }
    </tbody>
</table>
